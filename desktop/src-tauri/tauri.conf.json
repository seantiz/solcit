{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
      "beforeBuildCommand": "npm run build",
      "beforeDevCommand": "npm run dev",
      "devPath": "http://localhost:5173",
      "distDir": "../build"
    },
    "package": {
      "productName": "Solicit",
      "version": "0.2.0"
    },
    "tauri": {
     "allowlist": {
    "all": false,
    "dialog": {
      "all": true
     },
    "path": {
          "all": true
        },
    "http": {
      "all": true,
      "request": true,
      "scope": ["http://localhost:8080/*", "http://127.0.0.1:8080/*", "http://localhost:11434/*"]
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true,
      "scope": ["/**"]
    },
    "shell": {
          "open": true
        },
    "window": {
        "all": true
      }
  },
      "bundle": {
        "active": true,
        "category": "DeveloperTool",
        "copyright": "",
        "deb": {
          "depends": []
        },
        "externalBin": [],
        "icon": [
          "icons/32x32.png",
          "icons/128x128.png",
          "icons/128x128@2x.png",
          "icons/icon.icns",
          "icons/icon.ico"
        ],
        "identifier": "Solicit",
        "longDescription": "Jobhunting made easier",
        "macOS": {
          "entitlements": null,
          "exceptionDomain": "",
          "frameworks": [],
          "providerShortName": null,
          "signingIdentity": null
        },
        "shortDescription": "",
        "targets": "all",
        "windows": {
          "certificateThumbprint": null,
          "digestAlgorithm": "sha256",
          "timestampUrl": ""
        },
        "resources": [
          "resources/search_engine_indeed.py",
          "resources/search_engine_jooble.py",
          "resources/config.json",
          "resources/applicant_details.json",
          "resources/jobDescription.json",
          "resources/insegnante.sqlite",
          "resources/api.py",
          "resources/requirements.txt"
        ]
      },
      "security": {
        "csp": null
      },
      "updater": {
        "active": false
      },
      "windows": [
        {
          "fullscreen": false,
          "height": 800,
          "resizable": true,
          "title": "Solcit Jobhunter",
          "center": false,
          "width": 1200,
          "titleBarStyle": "Overlay"
        }
      ]
    }
  }
